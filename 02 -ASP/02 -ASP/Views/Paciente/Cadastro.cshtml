
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro</h2>
<div class="container">
    <form action="/Paciente/Gravar">
        <div class="form-group col-md-6">
            <label for="nome">Nome</label>
            <input type="text" name="nome" id="nome" placeholder="Digite seu nome" class="form-control" />
        </div>

        <div class="form-group col-md-6"">
            <label for="dtNasc">Data de Nascimento</label>
            <input type="date" name="dtNasc" id="dtNasc" placeholder="Data de nascimento" class="form-control" />
        </div>

        <div class="form-group col-md-6"">
            <label for="convenio">Nº do Convênio</label>
            <input type="number" name="convenio" id="convenio" placeholder="Nº" class="form-control" />
        </div>
        <div class="form-group col-md-2"">
            <label for="tipo">Tipo Sanguíneo</label>
            <select id="tipo" name="tipo" class="form-control">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="AB">AB</option>
                <option value="O">O</option>
            </select>
        </div>
        <div class="form-group col-md-6"">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    </form>
</div>

